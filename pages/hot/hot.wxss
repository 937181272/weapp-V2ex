.listItem{
    padding: 10px;
    font-size: 12px;
    line-height: 120%;
    text-align: left;
    border-bottom: 1px solid #e2e2e2;
    background-position: 0 bottom;
    background-repeat: repeat-x;
}
.info{
    overflow: hidden;
    padding-bottom: 5px;
}
.avatar{
    width: 24px;
    height: 24px;
    border-radius: 4px;
    float: left;
}
.member{
    color: #666;
    float: left;
    line-height:25px;
    margin-left:5px;
    font-size: 12px;
}
.reply{
    line-height: 12px;
    font-weight: bold;
    color: white;
    background-color: #c2c2c2;
    display: inline-block;
    padding: 2px 10px 2px 10px;
    border-radius: 12px;
    text-decoration: none;
    margin-right: 5px;
    float: right;
}
.title{
    color: #778087;
    text-decoration: none;
    word-break: break-all;
    font-size: 16px;
    line-height: 130%;
    text-shadow: 0px 1px 0px #fff;
    word-wrap: break-word;
}
.node{
    background-color: #f5f5f5;
    font-size: 10px;
    line-height: 10px;
    display: inline-block;
    padding: 4px 4px 4px 4px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    text-decoration: none;
    color: #999;
    float: right;
}