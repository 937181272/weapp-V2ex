.header{
    padding: 10px;
    font-size: 16px;
    line-height: 120%;
    text-align: left;
    border-bottom: 1px solid #e2e2e2;
    overflow: auto;
    background-color: #e2e2e2;
}
.body{
    padding: 10px;
    font-size: 12px;
    line-height: 120%;
    text-align: left;
    border-bottom: 1px solid #e2e2e2;
}
.content{
    font-size: 14px;
    line-height: 1.6;
    color: #000;
    word-wrap: break-word;
}
.info{
    text-align: left;
    border-bottom: 1px solid #e2e2e2;
}
.reply{
    line-height: 12px;
    font-weight: bold;
    color: white;
    background-color: #787878;
    display: inline-block;
    padding: 2px 10px 2px 10px;
    border-radius: 12px;
    text-decoration: none;
    margin-right: 5px;
    float: right;
}
.node{
    background-color: #f5f5f5;
    font-size: 14px;
    line-height: 14px;
    display: inline-block;
    padding: 4px 4px 4px 4px;
    -moz-border-radius: 2px;
    -webkit-border-radius: 2px;
    border-radius: 2px;
    text-decoration: none;
    color: #999;
    margin:4px 10px;
}
.headimg{
    width: 30px;
    height: 30px;
    border-radius: 4px;
    float: left;
    margin:2px 10px;
}
.username{
     color: #666;
    float: left;
    line-height:25px;
    margin-left:5px;
    font-size: 12px;
    margin:2px 10px;
}